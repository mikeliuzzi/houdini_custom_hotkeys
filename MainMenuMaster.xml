<mainMenu>
  <menuBar>
    <subMenu id="python_menu">
        <label>Python</label>


      <scriptItem id="h.py.switch_to_obj">
        <label>Switch to Obj</label>
        <scriptCode><![CDATA[
from __main__ import switch_context
switch_context("obj")
        ]]>
        </scriptCode>
      </scriptItem>

        <scriptItem id="h.py.switch_to_mat">
        <label>Switch to Mat</label>
        <scriptCode><![CDATA[
from __main__ import switch_context
switch_context("mat")
        ]]>
        </scriptCode>
      </scriptItem>

        <scriptItem id="h.py.switch_to_img">
        <label>Switch to IMG</label>
        <scriptCode><![CDATA[
from __main__ import switch_context
switch_context("img")
        ]]>
        </scriptCode>
      </scriptItem>

        <scriptItem id="h.py.switch_to_out">
        <label>Switch to Out</label>
        <scriptCode><![CDATA[
from __main__ import switch_context
switch_context("out")
        ]]>
        </scriptCode>
      </scriptItem>

      
      <scriptItem id="h.py.switch_to_stage">
      <label>Switch to Stage</label>
      <scriptCode><![CDATA[
from __main__ import switch_context
switch_context("stage")
        ]]>
      </scriptCode>
      </scriptItem>

    </subMenu>
  </menuBar>
</mainMenu>
